


<% @rooms.each do |room| %>

	<!-- (room) in backets is because it is looking for a number in the url, - room.id -->
	<%= link_to room_path(room) do %>
		<h3><%= room.title %></h3>
		<p><%= room.address %></p>
		<p><%= room.price_in_pence %></p>
		<p><%= image_tag room.image.url(:thumb) %></p>
	<% end %>

<% end %>